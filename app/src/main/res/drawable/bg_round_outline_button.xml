<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorRipple">

    <item android:id="@android:id/mask"
        android:top="@dimen/roundButtonStrokeWidth"
        android:bottom="@dimen/roundButtonStrokeWidth"
        android:left="@dimen/roundButtonStrokeWidth"
        android:right="@dimen/roundButtonStrokeWidth">

        <shape android:shape="rectangle">
            <solid android:color="@color/colorRipple" />
            <corners android:radius="@dimen/roundButtonRadius" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/roundButtonRadius" />
            <stroke
                android:width="@dimen/roundButtonStrokeWidth"
                android:color="@android:color/white" />
        </shape>
    </item>

</ripple>