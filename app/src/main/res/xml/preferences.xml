<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory
            android:title="@string/appearance">

                <SwitchPreference
                    android:key="@string/_pref_dark_theme"
                    android:icon="@drawable/ic_brush_24dp"
                    android:title="@string/dark_theme"
                    android:defaultValue="true" />

        </PreferenceCategory>

        <PreferenceCategory
            android:title="@string/help"
            app:allowDividerAbove="false">

                <Preference
                    android:key="@string/_pref_send_feedback"
                    android:icon="@drawable/ic_feedback_24dp"
                    android:title="@string/send_feedback" />

                <Preference
                    android:key="@string/_pref_report_problem"
                    android:icon="@drawable/ic_bug_report_24dp"
                    android:title="@string/report_problem" />

                <Preference
                    android:key="@string/_pref_rate_app"
                    android:icon="@drawable/ic_star_24dp"
                    android:title="@string/rate_app" />

        </PreferenceCategory>

        <PreferenceCategory
            android:title="@string/about"
            app:allowDividerAbove="false">

                <Preference
                    android:key="@string/_pref_open_source_licences"
                    android:icon="@drawable/ic_code_24dp"
                    android:title="@string/open_source_licences" />

                <Preference
                    android:key="@string/_pref_app_version"
                    android:icon="@drawable/ic_info_24dp"
                    android:title="@string/app_version" />

        </PreferenceCategory>

</PreferenceScreen>