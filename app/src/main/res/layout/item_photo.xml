<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="212dp"
    android:layout_marginTop="6dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    android:focusable="true"
    android:clickable="true"
    android:transitionName="@string/transition_photo"
    android:foreground="?selectableItemBackgroundBorderless"
    tools:targetApi="lollipop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/itemPhotoImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/cn_photo"/>

        <io.supercharge.shimmerlayout.ShimmerLayout
            android:id="@+id/itemPhotoShimmerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_angle="15"
            app:shimmer_gradient_center_color_width="0.3"
            app:shimmer_mask_width="0.9"
            app:shimmer_animation_duration="1000"
            app:shimmer_color="@color/colorShimmer"
            app:shimmer_auto_start="true">

            <include layout="@layout/item_placeholder_photo"/>

        </io.supercharge.shimmerlayout.ShimmerLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>