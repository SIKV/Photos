<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/photosRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="@dimen/photoRecyclerVerticalPadding"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <include
        android:id="@+id/noResultsFoundLayout"
        layout="@layout/layout_no_results_found" />

    <include
        android:id="@+id/loadingListLayout"
        layout="@layout/layout_loading_list" />

    <include
        android:id="@+id/loadingErrorLayout"
        layout="@layout/layout_loading_error" />

</FrameLayout>